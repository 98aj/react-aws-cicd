pipeline {
    agent any
    stages{
        stage ('Clean workspace'){
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                checkout scm // Then fetch repo
            }
        }

        stage ('build'){
            agent {
                docker{
                    image 'node:22-alpine'
                    reuseNode true
                }
            }
            steps{
                sh '''
                    mkdir -p .npm-cache
                    export npm_config_cache=$(pwd)/.npm-cache
                    
                    ls
                    node -v
                    npm install
                    npm build
                    ls

                '''
            }
        }
    }

}